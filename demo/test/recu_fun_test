program recu_fun_test
	var test, n_test : int;
	var b_test : bool;


function facto(n : int) : int
begin
	write "n : ";
	write n;
	write "\n";
	if (n = 0) then
	begin
		return 1;
	end;
	return facto(n-1)*n;
end;


function add(n1 : int, n2 : int) : int
begin
	write n1;
	write n2;
	return (n1 + n2);
end;

function testbool(t : bool) : unit
begin
	write t;
end;


begin
	b_test := false;
	testbool(b_test);
	write "\n";
end
