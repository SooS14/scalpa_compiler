(* Ceci est un exemple de code SCALPA *)
program maxi
    var i,j,count,maximum : int;
    var val : array[-4..4, 0..10] of int

function maxtab(ref par1 : int, t : array[-4..4, 0..10] of int) : bool
    var a : bool;
    begin
        write par1;
        par1 := par1 * 10;
        write par1;
        a := false;
        return a;
    end;

begin
    i := -4;
    j := 0;
    count := 0;
    while i <= 4 do
    begin
        j := 0;
        while j <= 10 do
        begin
            write "[";
            write i;
            write ",";
            write j;
            write "],";
            j := j+1;
            count := count + 1;
            val[i,j] := count;
        end;
        write "\n";
        i := i+1
    end;
    write maxtab(val[4,10], val);
    write val[4,10];
end
